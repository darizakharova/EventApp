<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wukker.sb.eventconnectionfortopmobile" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".EventApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="fb175113412913318"/>
        <activity
            android:name=".TopMobileActivity"
            android:label="@string/app_name" >
            android:launchMode="singleInstance"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SNRegistrationActivity"
            android:label="@string/title_activity_snregistration" >
        </activity>

        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <!-- <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" /> -->

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="fb175113412913318" />
            </intent-filter>
        </activity>

        <activity
            android:name=".VisitorRegActivity"
            android:label="@string/title_activity_visitor_reg" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".SectionActivity"
            android:label="@string/title_activity_section" >
        </activity>
        <activity
            android:name=".StaffActivity"
            android:label="@string/title_activity_staff" >
        </activity>
        <activity
            android:name=".UserListActivity"
            android:label="@string/title_activity_user_list" >
        </activity>
        <activity
            android:name=".Quest1Activity"
            android:label="@string/title_activity_quest1" >
        </activity>
        <activity
            android:name=".Quest2Activity"
            android:label="@string/title_activity_quest2" >
        </activity>
        <activity
            android:name=".Quest3Activity"
            android:label="@string/title_activity_quest3" >
        </activity>
        <activity
            android:name=".Quest4Activity"
            android:label="@string/title_activity_quest4" >
        </activity>
        <activity
            android:name=".Quest5Activity"
            android:label="@string/title_activity_quest5" >
        </activity>
        <activity
            android:name=".Quest6Activity"
            android:label="@string/title_activity_quest6" >
        </activity>
    </application>

</manifest>
